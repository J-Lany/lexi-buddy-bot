{
  "name": "lexi-buddy-bot",
  "version": "1.0.0",
  "description": "Telegram bot for Lexi Buddy (grammY + TypeScript)",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "prepare": "husky install",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "@eslint/js": "^9.38.0",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "grammy": "^1.38.3",
    "typescript-eslint": "^8.46.2"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "license": "MIT"
}
